{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "dist",
    "sourceMap": true,
    "moduleResolution": "Node",
    "module": "CommonJS",
    "target": "ES6",
    "esModuleInterop": true,
    "paths": {
      "@infra/*": ["src/infrastructure/*"],
      "@app/*": ["src/app/*"],
      "@shared/*": ["src/shared/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
